<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#acd96e">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:gravity="center"
            android:text="MY SLAMBOOK"
            android:textColor="#ff7518"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="What's your Name?"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            android:textColor="@color/DodgerBlue"/>

        <EditText
            android:id="@+id/your_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            tools:ignore="DuplicateIds" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="How old are you?"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            android:textColor="@color/DodgerBlue"/>
        <EditText
            android:id="@+id/your_age"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Where and when you were born?"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            android:textColor="@color/DodgerBlue"/>
        <EditText
            android:id="@+id/your_birthday"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Your height?"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            android:textColor="@color/DodgerBlue"/>

        <EditText
            android:id="@+id/your_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            tools:ignore="DuplicateIds" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Your weight?"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            android:textColor="@color/DodgerBlue"/>

        <EditText
            android:id="@+id/your_weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            tools:ignore="DuplicateIds" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What's your favorite Color?"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            android:textColor="@color/DodgerBlue"/>

        <EditText
            android:id="@+id/favorite_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What's your favorite Food?"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            android:textColor="#1E90FF"/>

        <EditText
            android:id="@+id/favorite_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What's your favorite Song?"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            android:textColor="#1E90FF"/>

        <EditText
            android:id="@+id/favorite_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What's your favorite Book?"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            android:textColor="#1E90FF"/>

        <EditText
            android:id="@+id/favorite_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Who is your favorite Actor?"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            android:textColor="#1E90FF"/>

        <EditText
            android:id="@+id/favorite_actor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Who is your favorite Actress?"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            android:textColor="#1E90FF"/>
        <EditText
            android:id="@+id/favorite_actress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="What is your favorite Movie?"
            android:textSize="20sp"
            android:textStyle="italic"
            android:layout_marginTop="16dp"
            android:textColor="#1E90FF"/>

        <EditText
            android:id="@+id/favorite_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Answer"
            android:inputType="text"
            android:background="@color/white"
            android:textColor="@color/black"
            android:padding="8dp"
            android:layout_marginTop="8dp"/>


    </LinearLayout>

</ScrollView>
